<root xmlns="https://github.com/zhongyang219/MusicPlayer2/skin" xmlns:xsi="http://www.w3.org/2101/XMLSchema-instance" xsi:schemaLocation="https://github.com/zhongyang219/MusicPlayer2/skin ./skin.xsd"
      index="2">

  <ui type="big">
    <verticalLayout>
      <trackInfo height="20" margin="4" margin-bottom="0"/>
      <text type="format" style="scroll" height="20" margin-left="4" margin-right="4"/>
      <stackElement margin-left="4" margin-right="4" margin-bottom="8" show_indicator="true" indicator_offset="-8">
        <!--第1页-->
        <horizontalLayout>
          <verticalLayout margin-bottom="12">
            <albumCover square="true" margin="8"/>
            <text type="title" alignment="center" style="scroll" height="26" font_size="10" />
            <text type="artist" alignment="center" style="scroll" height="20" font_size="9" margin-top="0" />
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" margin-top="-8" min-height="24" max-height="80"/>
          </verticalLayout>
          <lyrics margin="4" margin-left="8" margin-bottom="16"/>
        </horizontalLayout>
        <!--第2页-->
        <horizontalLayout>
          <!--左侧部分-->
          <verticalLayout margin-bottom="12">
            <albumCover square="true" margin="8"/>
            <text type="title" alignment="center" style="scroll" height="26" font_size="10" />
            <text type="artist" alignment="center" style="scroll" height="20" font_size="9" margin-top="0" />
            <lyrics hide-height="200" height="18%" margin-top="4"/>
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" margin-top="-8" min-height="24" max-height="80"/>
          </verticalLayout>
          <!--右侧部分-->
          <verticalLayout margin="4" margin-left="8" margin-bottom="16">
            <playlistIndicator height="30" margin-bottom="4"/>
            <searchBox height="26" margin-bottom="4"/>
            <playlist item_height="32"/>
          </verticalLayout>
        </horizontalLayout>
        <!--第3页-->
        <horizontalLayout>
          <!--左侧部分-->
          <verticalLayout margin-bottom="12">
            <rectangle height="80" margin="8">
              <horizontalLayout margin="4">
                <albumCover square="true" width="64" margin-left="4"/>
                <verticalLayout margin-left="16">
                  <text type="title" font_size="10" style="scroll" height="28"/>
                  <text type="artist" font_size="9" style="scroll" height="24"/>
                </verticalLayout>
              </horizontalLayout>
            </rectangle>
            <lyrics margin-top="4" margin-left="8" margin-right="8" hide-height="120"/>
            <spectrum draw_reflex="true" fixed_width="true" alignment="center" height="15%" min-height="24" max-height="80"/>
          </verticalLayout>
          <!--右侧部分-->
          <verticalLayout margin="4" margin-left="8" margin-bottom="16">
            <playlistIndicator height="30" margin-bottom="4"/>
            <searchBox height="26" margin-bottom="4"/>
            <playlist item_height="32"/>
          </verticalLayout>
        </horizontalLayout>
      </stackElement>
      <!--工具栏-->
      <rectangle height="24" margin="4" margin-bottom="0">
        <horizontalLayout>
          <button key="repeatMode" width="20" height="20" margin="2"/>
          <button key="settings" width="20" height="20" margin="2"/>
          <button key="equalizer" width="20" height="20" margin="2"/>
          <button key="skin" width="20" height="20" margin="2"/>
          <button key="miniMode" width="20" height="20" margin="2" hide-width="174"/>
          <button key="info" width="20" height="20" margin="2" hide-width="198"/>
          <button key="find" width="20" height="20" margin="2" hide-width="222"/>
          <button key="lyricTranslate" width="20" height="20" margin="2" hide-width="246"/>
          <button key="darkLightMode" width="20" height="20" margin="2" hide-width="294"/>
          <button key="abRepeat" width="20" height="20" margin="2" hide-width="318"/>
          <button key="desktopLyric" width="20" height="20" margin="2" hide-width="270"/>
          <placeHolder/>
          <volume width="56" show_text="true"/>
          <beatIndicator width="44" hide-width="368"/>
        </horizontalLayout>
      </rectangle>
      <!--控制条-->
      <classicalControlBar margin="4"/>
    </verticalLayout>
  </ui>

