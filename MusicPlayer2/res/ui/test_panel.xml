<root xmlns="https://github.com/zhongyang219/MusicPlayer2/skin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/zhongyang219/MusicPlayer2/skin ../../skins/skin.xsd">
  <panel>
    <verticalLayout margin="8">
      <verticalLayout>
        <horizontalLayout height="24">
          <checkBox id="checkbox1" text="测试复选框"/>
          <placeHolder/>
        </horizontalLayout>
        
        <rectangle height="60">
          <horizontalLayout>
            <icon icon="setting" width="52"/>
            <verticalLayout>
              <text text="主要文本" height="20" font_size="10"/>
              <text text="次要文本" color_style="emphasis1" height="20"/>
            </verticalLayout>
            <toggleButton id="toggleBtn1" width="80" margin-right="16"/>
          </horizontalLayout>
        </rectangle>
        
        <placeHolder/>
        <text id="text1" type="userDefine" height="20"/>
        <text id="text2" type="userDefine" height="20"/>
      </verticalLayout>
      <horizontalLayout height="28" margin-top="8">
        <placeHolder/>
        <button id="okBtn" icon="ok" text="%(TXT_APPLY)" height="28" show_text="true"/>
        <button id="cancelBtn" icon="cancel" text="%(TXT_CLOSE)" show_text="true"/>
      </horizontalLayout>
    </verticalLayout>
  </panel>
</root>
