                <button key="next" width="40" height="40" bigIcon="true" margin="2"/>
                <button key="favorite" width="26" height="26" margin="2"/>
              </horizontalLayout>
              <horizontalLayout>
                <text text="%(CurrentPosition)" font_size="8" width="32" alignment="right"/>
                <sliderProgressBar margin-left="8" margin-right="8"/>
                <text text="%(SongLength)" font_size="8" width="32"/>
              </horizontalLayout>
            </verticalLayout>
            <horizontalLayout margin-right="4" proportion="2">
              <placeHolder/>
              <volume show_text="true" width="64" height="26" margin="2"/>
              <button key="addToPlaylist" width="26" height="26" margin="2"/>
              <button key="mediaLib" width="26" height="26" margin="2"/>
              <button key="showPlayQueue" width="26" height="26" margin="2"/>
            </horizontalLayout>
          </horizontalLayout>
        </rectangle>
      </verticalLayout>
