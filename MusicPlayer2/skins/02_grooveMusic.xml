        <elementSwitcher x="4" y="4" width="32" height="32" style="button" text="%(UI_TIP_BTN_BACK)" icon="dropDown" stack_element_id="main_stack_element" stack_element_index="0"/>
        <verticalLayout>
          <placeHolder show_when_use_system_titlebar="true" height="28"/>
          <lyrics margin="4"/>
          <horizontalLayout height="126">
            <albumCover width="110" margin="8"/>
