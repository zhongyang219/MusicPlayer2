            </verticalLayout>
          </horizontalLayout>
          <rectangle height="88" no_corner_radius="true">
            <horizontalLayout>
              <verticalLayout proportion="2">
                <horizontalLayout height="24" margin-left="8">
                  <rating width="96"/>
                  <placeHolder/>
                </horizontalLayout>
                <text type="format" style="scroll" height="28" margin-left="8"/>
              </verticalLayout>
              <verticalLayout proportion="3">
                <horizontalLayout height="60">
                  <button key="repeatMode" width="26" height="26" margin="2"/>
